# See http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{r,R,md,Rmd}]
indent_size = 2

[*.{c,h}]
indent_size = 4

[*.{cpp,hpp}]
indent_size = 4

[{NEWS.md,DESCRIPTION,LICENSE}]
max_line_length = 80

[CITATION.cff]
indent_size = 2
